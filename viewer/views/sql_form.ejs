</div>
<script>
$(function(){
    $('#datepicker-inline .in-line').datepicker({
        format: "yyyy-mm-dd",
        language: "ja",
        autoclose: true
    });
    $('.in-line').on('changeDate', function() {
        $('#my_hidden_input').val(
            $('.in-line').datepicker('getFormattedDate')
        );
    });
});

